<%- include('partials/header'); -%>
<div class="p-3 mb-2 bg-success text-white" style="  position: -webkit-sticky; position: sticky;top: 0;">
    <strong>Currently Available:</strong>  &nbsp;&nbsp;&nbsp;&nbsp;
    
    Cash: <%= allBalances.cash%>  &nbsp;&nbsp;
    Axis: <%= allBalances.axis%>  &nbsp;&nbsp;
    HSBC: <%= allBalances.hsbc%>  &nbsp;&nbsp;
    SBI: <%= allBalances.sbi%>    &nbsp;&nbsp;
  </div>

<div style="width: 30%; margin: 0 auto; padding-top : 5%;">
          <form action="/record" method="POST">
            <div class="form-group row">
                <label for="date-input" class="col-3 col-form-label">Date</label>
                <div class="col-9">
                  <input class="form-control" type="date" value="2020-04-15" name="date" id="date-input">
                </div>
            </div>
              <div class="form-group row">
              <label for="exampleFormControlInput1" class="col-3 col-form-label">Amount</label>
              <div class="col-9">
                  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Amount" name="paid">
              </div>
              </div>
              <div class="form-group">
                    <div class="row">
                        <label for="fromTransfer" class="col-form-label col-3">From</label>
                        <div class="col-9">
                            <select class="form-control" id="fromTransfer" name="from">
                                <option>Cash</option>
                                <option>Axis</option>
                                <option>HSBC</option>
                                <option>SBI</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div>
                    <img src="/images/icon/arrow.png" style="text-align: center; padding-bottom: 3%;" alt="">
                </div>
                <div class="form-group">
                    <div class="row">
                        <label for="fromTransfer" class="col-form-label col-3">To</label>
                        <div class="col-9">
                            <select class="form-control" id="fromTransfer" name="paidto">
                                <option>Cash</option>
                                <option>Axis</option>
                                <option>HSBC</option>
                                <option>SBI</option>
                            </select>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
              <button type="submit" class="btn btn-primary">Submit</button>
          </form>
      </div>  
<%- include('partials/footer'); -%>