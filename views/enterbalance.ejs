<%- include('partials/header'); -%>
<div style="width: 30%; margin: 0 auto; padding-top : 5%;">
    <form action="/enterbalance" method="POST">
        <div class="form-group row">
            <label for="date-input" class="col-3 col-form-label">Date</label>
            <div class="col-9">
              <input class="form-control" type="date" value="2020-04-15" name="date" id="date-input">
            </div>
        </div>
        <div class="form-group row">
            <label for="cash" class="col-3 col-form-label">Cash</label>
            <div class="col-9">
              <input class="form-control" type="number" name="cash" id="cash" value="0">
            </div>
        </div>
        <div class="form-group row">
        <label for="hsbc" class="col-3 col-form-label">HSBC</label>
        <div class="col-9">
            <input type="number" class="form-control" id="hsbc" name="hsbc" value= 0>
        </div>
        </div>
        <div class="form-group row">
            <label for="exampleFormControlInput2" class="col-3 col-form-label">AXIS</label>
            <div class="col-9">
            <input type="number" class="form-control " id="exampleFormControlInput2" name="axis" value=0>
            </div>    
        </div>

        <div class="form-group row">
            <label for="exampleFormControlInput3" class="col-3 col-form-label">SBI</label>
            <div class="col-9">
            <input type="number" class="form-control " id="exampleFormControlInput3" name="sbi" value=0>
            </div>    
        </div>

        <div class="form-group row">
            <label for="exampleFormControlInput4" class="col-3 col-form-label">Given/Deposited By:</label>
            <div class="col-9">
            <input type="text" class="form-control " id="exampleFormControlInput4" name="gd">
            </div>    
        </div>
        <button type="submit" class="btn btn-primary">Add Amount</button>
    </form>
</div>    

<%- include('partials/footer'); -%>